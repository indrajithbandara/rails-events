<% if !logged_in? %>
<div class="row"  style="padding: 50px;">
	<div class="col-md-12">
		<div class="card card-login col-md-6 offset-md-6">
      <div class="card-header">Register</div>
      <div class="card-body">
        <%= form_tag '/' do  %>
         <div class="form-group">
            <label for="username">Username</label>
            <%= text_field_tag :username, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="password">Confirm Password</label>
            <%= password_field_tag :password_confirmation, nil, class: 'form-control' %>
          </div>
          <%= submit_tag 'Register', class: 'btn btn-primary btn-block' %> 
        <% end %>
      </div>
    </div>
	</div>
</div>
<% else %>

<div class="card text-center">
  <div class="card-header">
    Post a very important party
  </div>
  <div class="card-block">
      <div class="gravatar text-center">
          <%= gravatar_for current_user, size: 100 %>
        </div>
    <h4 class="card-title">
      <%= current_user.username.capitalize! %>
    </h4>
    <p class="card-text">You can post an event and share it to your friends</p>
    <a href="<%= new_event_path %>" class="btn btn-primary" style="margin-bottom: 20px;">New event</a>
  </div>
</div>


<% end %>
