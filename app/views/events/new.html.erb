<div class="row"  style="padding: 50px;">
	<div class="col-md-12">
		<div class="card card-login col-md-6 offset-md-3">
      <div class="card-header">
        New event
      </div>

      <div class="card-body">
        <%= form_tag '/events' do  %>
         <div class="form-group">
            <label for="username">Event title</label>
            <%= text_field_tag :title, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="email">Location</label>
            <%= text_field_tag :location, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="password">Start Date</label>
            <input type="text" id="start_date" data-provide='datepicker' data-date-format="yyyy/mm/dd">
       </div>
          <div class="form-group">
            <label for="password">End Date</label>
            <input type="text" id="end_date" data-provide='datepicker' data-date-format="yyyy/mm/dd" >
          </div>
          <%= submit_tag 'Register', class: 'btn btn-primary btn-block' %> 
        <% end %>
      </div>
    </div>
	</div>
</div>

